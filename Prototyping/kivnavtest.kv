WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "First screen"
            font_size: 32
        Button:
            text: "Next screen"
            font_size: 32
            on_release:
                app.root.current= "second"
                root.manager.transition.direction= "left"

<SecondWindow>:
    name: "second"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Second screen"
            font_size: 32
        Button:
            text: "Previous screen"
            font_size: 32
            on_release:
                app.root.current= "first"
                root.manager.transition.direction= "right"