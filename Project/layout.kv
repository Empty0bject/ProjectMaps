WindowManager:
    Homepage:
    Settings_Page:
    RoutePlan_Page:
    RouteJor_Page:

<Homepage>:
    name: "hp"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "MapRoute"
            #font_name: root.current_settings[0]
        Button:
            text: "Plan route"
            #font_name: root.current_settings[0]
            on_release:
                app.root.current= "rp"
                root.manager.transition.direction= "left"
        Button:
            text: "Settings"
            #font_name: root.current_settings[0]
            on_release:
                app.root.current= "st"
                root.manager.transition.direction= "left"


<Settings_Page>:
    name: "st"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Settings"
        Label:
            text: "Fonts"
        Button:
            text: "Standard"
            #on_release:
            #    root.on_font_press("standard")
        Button:
            text: "Dyslexia friendly"
            #on_release:
            #    root.on_font_press("dyslexic")
        Label:
            text: "Themes"
        Label:
            text: "Audio"
        Button:
            text: "Back"
            on_release:
                app.root.current= "hp"
                root.manager.transition.direction= "right"


<RoutePlan_Page>:
    name: "rp"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Plan your route"
        TextInput:
            id: startingloc_info
            text: "Enter starting location"
            multiline: False
            on_text_validate: root.on_text_val_s(self)
        TextInput:
            id: endingloc_info
            text: "Enter destination"
            multiline: False
            on_text_validate: root.on_text_val_d(self)
        Label:
            text: root.error_disp
        Button:
            text: "Plan"
            on_release:
                root.on_plan_press(self)
                app.root.current= "rj"
                root.manager.transition.direction= "right"
        Button:
            text: "Back"
            on_release:
                app.root.current= "hp"
                root.manager.transition.direction= "right"


<RouteJor_Page>:
    name: "rj"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Route jorney"
        Label:
            text: "Current step is: "+ root.current_step
        Button:
            text: "Next step"
            on_release:
                root.step_press(1)
        Button:
            text: "Previous step"
            on_release:
                root.step_press(-1)